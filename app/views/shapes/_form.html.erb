<% if @shape.errors.any? %>
  <ol>
      <li><%= @shape.errors.full_messages %></li>
  </ol>
<% end %>
<%= form_for @shape do |f| %>
  <div class="form row">
    <div class="form-group col-md-4">
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :terrain %>
      <%= f.text_field :terrain, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label 'Image URL' %>
      <%= f.url_field :image, :placeholder => 'https://...', :class => 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Shape Overview' %>
    <%= f.text_area :brief, :class => 'form-control', :required => true %>
  </div>
  <%= f.submit 'Create Shape', :class => "btn btn-primary" %>
<% end %>
