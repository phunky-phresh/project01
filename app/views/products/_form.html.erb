<% if @product.errors.any? %>
  <ol>
      <li><%= @product.errors.full_messages %></li>
  </ol>
<% end %>
<%= form_for @product do |f| %>
  <div class="form row">
    <div class="form-group col-md-2">
      <%= f.label :year %>
      <%= f.text_field :year, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :brand %>
      <%= f.text_field :brand, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :model %>
      <%= f.text_field :model, :class => 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label :shape_id %>
      <%= f.select :shape_id, Shape.pluck(:name, :id), :include_blank => true, :required => true %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :profile_id %>
      <%= f.select :profile_id, Profile.pluck(:name, :id), :include_blank => true, :required => true%>
    </div>
    <div class="form-group col-md-4">
      <%= f.label 'Image URL' %>
      <%= f.url_field :image, :placeholder => 'https://...', :class => 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Board Overview' %>
    <%= f.text_area :brief, :class => 'form-control', :required => true %>
  </div>
  <%= f.submit 'Create Board', :class => "btn btn-primary" %>
<% end %>
