<%= form_for @review do |f| %>

<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, :required => true, :autofocus => true, :class => 'form-control' %>
</div>
<div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :product_id %>
        <%= f.select :product_id, Product.all.map{ |p| [p.name, p.id]}, :include_blank => true, :required => true %>
    <%= link_to 'Add Board', new_product_path, :id => 'add-board' %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :date %>
      <%= f.number_field :date, :class => 'form-control' %>
    </div>
    <div class="form-group col-md-2">
      <%= f.label :rating %>
      <%= f.number_field :rating, :class => 'form-control' %>
    </div>
  </div>
<div class="form-group">
  <%= f.label :brief %>
  <%= f.text_area :brief, :class => 'form-control' %>
</div>
  <%= f.text_field :user_id, :value => @current_user.id, :type => 'hidden' %>
  <%= f.submit %>
<% end %>
