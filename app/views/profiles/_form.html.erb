<% if @profile.errors.any? %>
  <ol>
      <li><%= @profile.errors.full_messages %></li>
  </ol>
<% end %>
<%= form_for @profile do |f| %>
  <div class="form row">
    <div class="form-group col-md-4" >
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label :skill %>
      <%= f.text_field :skill, :class => 'form-control', :required => true %>
    </div>
    <div class="form-group col-md-4">
      <%= f.label 'Image URL' %>
      <%= f.url_field :image, :placeholder => 'https://...', :class => 'form-control', :required => true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'profile Overview' %>
    <%= f.text_area :brief, :class => 'form-control', :required => true %>
  </div>
  <%= f.submit 'Submit', :class => "btn btn-primary" %>
<% end %>
