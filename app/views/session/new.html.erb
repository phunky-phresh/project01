<h1>Log In</h1>

<% if flash[:error].present? %>
  <p><%= flash[:error] %></p>
<% end  %>
<%# Use a form tag when its not a CRUD system %>
<%= form_tag login_path do%>
  <%= label_tag :email %>
  <%= email_field_tag :email %>

  <%= label_tag :password %>
  <%= password_field_tag :password %>

  <%= submit_tag 'Sign In' %>
<% end %>
